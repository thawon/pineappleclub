doctype html

html(lang="en", ng-app="pineappleclub")
  head
    base(href="/index.html")
    title="Pineapple Club - Child Care Service | Banksia"
    meta(name="google-site-verification", content="NtzdEuPKDVSmYCyX4rWinbQER6YkqS8F5e0fWNgtTsg")
    meta(name="description", content="High quality child care service supported by Integricare. Our location is near Rockdale and Banksia train station. Family Day Care, Before/After school care, Vocation care")
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='styles/custom-bootstrap.css')
    link(rel='stylesheet', href='styles/offcanvas.css')
    link(rel='stylesheet', href='styles/ngProgress.css')
    link(rel='stylesheet', href='styles/plusgallery.css')
    link(rel='stylesheet', href='styles/toaster.css')
  body(ng-controller="ApplicationController")    
    div.container
      toaster-container(toaster-options="{'position-class': 'toast-bottom-center'}")
      div.row.row-offcanvas.row-offcanvas-right
        div.col-xs-12.col-sm-12 
          div(ng-include="'scripts/components/navigator/navigator.html'")
          div(ng-include="'scripts/components/header-admin/header-admin.html'")
          div(ng-include="'scripts/components/header-client/header-client.html'")
          div(class="{{vm.animation}}", ui-view)
        div(ng-include="'scripts/components/side-bar/side-bar.html'")
      div(ng-include="'scripts/components/footer/footer.html'")
    div.device-xs.visible-xs
    div.device-sm.visible-sm
    div.device-md.visible-md
    div.device-lg.visible-lg
    script(src="https://code.jquery.com/jquery-1.9.1.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-resource.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-cookies.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-animate.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-mocks.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.11/angular-ui-router.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/0.4.9/toaster.min.js")
    script(src="scripts/vendors/ngProgress.min.js")
    script(src="scripts/vendors/plusgallery.js")
    script(src="scripts/vendors/breeze.debug.js")
    script(src="scripts/vendors/breeze.dataService.mongo.js")    
    script(src="scripts/vendors/breeze.bridge.angular.js")
    script(src="scripts/vendors/breeze.metadata-helper.js")
    script(src="scripts/vendors/breeze.saveErrorExtensions.js")
    script(src="https://maps.googleapis.com/maps/api/js?v=3.exp")    
    each script in scripts
      script(src="#{script}")
    